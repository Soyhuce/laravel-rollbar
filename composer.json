{
  "name": "soyhuce/laravel-rollbar",
  "description": "Rollbar wrapper for Laravel",
  "keywords": [
    "soyhuce",
    "laravel",
    "rollbar"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Bastien Philippe",
      "email": "bastien.philippe@soyhuce.fr",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/contracts": "^8.74",
    "illuminate/support": "^8.74",
    "rollbar/rollbar": "^3.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.4",
    "orchestra/testbench": "^6.18",
    "pestphp/pest": "^1.21",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Soyhuce\\LaravelRollbar\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Soyhuce\\LaravelRollbar\\Tests\\": "tests"
    }
  },
  "scripts": {
    "post-install-cmd": "@composer bin all install --ansi",
    "post-update-cmd": "@composer bin all update --ansi",
    "cs": "vendor/bin/php-cs-fixer fix",
    "test": "vendor/bin/pest --config=phpunit.xml",
    "analyse": "vendor/bin/phpstan analyse",
    "all": [
      "@cs",
      "@test",
      "@analyse"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Soyhuce\\LaravelRollbar\\LaravelRollbarServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
